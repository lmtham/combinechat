<body>

    <header>
        <h1>Welcome to Our Chat Support</h1>
    </header>

    <div id="content" style="text-align: center; padding: 50px;">
        <p>This page contains an embedded AI assistant powered by n8n.</p>
    </div>

    <footer>
        <p>&copy; 2025 My Chat Widget</p>
    </footer>

    <!-- Floating Chat Button -->
    <div id="chat-toggle-button">
        <img src="https://unpkg.com/lucide-static@0.321.0/icons/message-circle.svg" alt="Chat">
    </div>

    <!-- Chat Container -->
    <div id="n8n-chat-container"></div>

    <!-- n8n Chat Widget Script -->
    <script type="module">
        import { createChat } from 'https://cdn.jsdelivr.net/npm/@n8n/chat/dist/chat.bundle.es.js';

        let chatWidget = null;

        function initializeChat() {
            if (!chatWidget) {
                chatWidget = createChat({
                    webhookUrl: 'https://n8ncloud2.onrender.com/webhook/2f82c208-de56-4c9d-8028-c5bfbe4f1428/chat',
                    mode: 'embedded',
                    container: document.getElementById('n8n-chat-container'),
                    showWelcomeScreen: false,
                    initialMessages: [],
                    i18n: {
                        en: {
                            getStarted: 'Start New Conversation',
                            inputPlaceholder: 'Type your question...',
                            title: 'Welcome to Our Support!',
                            subtitle: "Start a chat. We're here to help 24/7.",
                        },
                    },
                    styleOverrides: {
                        '--chat--message--font-size': '0.85rem',
                        '--chat--textarea--height': '50px',
                    }
                });
            }
        }

        document.getElementById('chat-toggle-button').addEventListener('click', () => {
            const chatContainer = document.getElementById('n8n-chat-container');
            if (chatContainer.style.display === 'none' || chatContainer.style.display === '') {
                chatContainer.style.display = 'block';
                initializeChat();
            } else {
                chatContainer.style.display = 'none';
            }
        });
    </script>

</body>
</html>
